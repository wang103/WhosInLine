<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

<RelativeLayout
    android:id="@+id/cell_id"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" >

<TextView
	android:id="@+id/cell_venue_name"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:gravity="left"
	android:layout_alignParentTop="true"
	android:layout_alignParentLeft="true" />
    
<ImageView
	android:id="@+id/cell_venue_image"
	android:contentDescription="@string/str_venue_image_description"
	android:layout_width="80dp"
	android:layout_height="80dp"
	android:layout_alignTop="@+id/cell_venue_type"
	android:layout_alignParentLeft="true" />

<TextView
	android:id="@+id/widget35"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/str_show_type"
	android:layout_above="@+id/widget36"
	android:layout_alignLeft="@+id/widget36" />

<TextView
	android:id="@+id/widget36"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/str_show_rating"
	android:layout_below="@+id/widget40"
	android:layout_toRightOf="@+id/cell_venue_image" />

<TextView
	android:id="@+id/widget44"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/str_show_distance"
	android:layout_below="@+id/widget36"
	android:layout_alignLeft="@+id/widget36" />

<TextView
	android:id="@+id/cell_venue_type"
	android:layout_width="100dp"
	android:layout_height="wrap_content"
	android:layout_alignTop="@+id/widget40"
	android:layout_alignLeft="@+id/cell_distance" />

<ImageView
	android:id="@+id/cell_rating_image"
	android:contentDescription="@string/str_rating_image_description"
	android:layout_width="100dp"
	android:layout_height="20dp"
	android:layout_alignTop="@+id/widget36"
	android:layout_alignLeft="@+id/cell_distance" />

<TextView
	android:id="@+id/cell_distance"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_alignTop="@+id/widget44"
	android:layout_toRightOf="@+id/widget44" />

<TextView
	android:id="@+id/widget45"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/str_show_distance_unit"
	android:layout_alignTop="@+id/widget44"
	android:layout_toRightOf="@+id/cell_distance" />

<TextView
	android:id="@+id/widget40"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/str_show_wait"
	android:layout_below="@+id/cell_venue_name"
	android:layout_alignParentRight="true" />

<TextView
	android:id="@+id/cell_wait_minutes"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:gravity="left"
	android:layout_alignBottom="@+id/cell_rating_image"
	android:layout_alignLeft="@+id/widget40" />

<TextView
	android:id="@+id/widget43"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="@string/str_show_wait_unit"
	android:layout_below="@+id/cell_rating_image"
	android:layout_alignLeft="@+id/cell_wait_minutes" />

</RelativeLayout>

<!-- the expandable view that is initially hidden -->

<LinearLayout
	android:id="@+id/expandable"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:weightSum="2"
	android:background="#000000">

<Button
    android:id="@+id/button_profile"
	android:layout_width="0dp"
	android:layout_height="fill_parent"
	android:layout_weight="1"
	android:text="@string/str_profile" >
</Button>

<Button
	android:id="@+id/button_write_review"
	android:layout_width="0dp"
	android:layout_height="fill_parent"
	android:layout_weight="1"
	android:text="@string/str_write_review" >
</Button>

</LinearLayout>

</LinearLayout>